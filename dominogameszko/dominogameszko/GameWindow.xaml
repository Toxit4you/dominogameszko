<Window x:Class="dominogameszko.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dominogameszko"
        mc:Ignorable="d"
        Title="GameWindow" Height="auto" Width="auto" WindowState="Maximized">
    <Grid>
        <DataGrid x:Name="Table" 
                  AutoGenerateColumns="False"
                  HeadersVisibility="None"
                  IsReadOnly="True" 
                  ColumnWidth="20"
                  RowHeight="19"
                  GridLinesVisibility="None"
                  MaxWidth="1003"
                  MaxHeight="957"
                  SelectionMode="Single"
                  SelectionUnit="Cell">
            <DataGridCell Style="{StaticResource DataGridHover}"/>
        </DataGrid>
    </Grid>
</Window>
