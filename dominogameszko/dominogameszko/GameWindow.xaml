<Window x:Class="dominogameszko.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dominogameszko"
        mc:Ignorable="d"
        Title="GameWindow" Height="auto" Width="auto" WindowState="Maximized">
    <Window.DataContext>
        <local:Board/>
    </Window.DataContext>
    <Canvas x:Name="GameWindowCanvas">
        <DataGrid x:Name="Table" 
                  AutoGenerateColumns="False"
                  HeadersVisibility="None"
                  IsReadOnly="True" 
                  ColumnWidth="19"
                  RowHeight="19"
                  GridLinesVisibility="None"
                  MaxWidth="1003"
                  MaxHeight="957"
                  SelectionMode="Single"
                  SelectionUnit="Cell"
                  MouseLeftButtonDown="Table_MouseLeftButtonDown"/>
		<Label x:Name="teszt" Content="asd" Canvas.Right="0" Canvas.Bottom="0"/>
	</Canvas>
</Window>
